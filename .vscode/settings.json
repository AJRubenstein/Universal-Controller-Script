{
    // Disable automatic indentation detection
    // and force a tab size of 4
    "editor.detectIndentation": false,
    "editor.tabSize": 4,

    // Link up docstring template
    "autoDocstring.customTemplatePath": "resources/docstring_template.mustache",

    // Switch off Pylance, since we're using MyPy instead
    "python.analysis.typeCheckingMode": "off",

    // Pytest configuration
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    // Enable linters
    "python.linting.enabled": true,
    "python.linting.flake8CategorySeverity.E": "Warning",
    "python.linting.flake8CategorySeverity.F": "Warning",
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,

    // Spell checker
    "cSpell.words": [
        "abstractmethoderror",
        "apifixes",
        "Appassionata",
        "buttondatastrat",
        "capsys",
        "channelrack",
        "Cimbalom",
        "classmethod",
        "colors",
